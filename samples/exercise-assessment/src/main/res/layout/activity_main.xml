<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.myscript.iink.samples.assessment.utils.LockableScrollView
        android:id="@+id/scrollcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/problemLinear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:src="@drawable/ic_num_2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingVertical="16dp"
                    android:paddingLeft="16dp"
                    android:src="@drawable/ic_twolinearequation" />

                <TextView
                    android:id="@+id/problem1"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="14dp"
                    android:text="@string/math_problem_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/problemSolver1"
                android:layout_width="match_parent"
                android:layout_height="100dp" >
                <include layout="@layout/editor_view"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:id="@+id/problemLinear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:src="@drawable/ic_num_1" />

                <TextView
                    android:id="@+id/problem2"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/math_problem_2" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/problemSolver2"
                android:layout_width="match_parent"
                android:layout_height="100dp" >
                <include layout="@layout/editor_view"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:id="@+id/problemLinear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:src="@drawable/ic_num_3" />

                <TextView
                    android:id="@+id/problem3"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/math_problem_3" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/problemSolver3"
                android:layout_width="match_parent"
                android:layout_height="100dp" >
                <include layout="@layout/editor_view"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:id="@+id/problemLinear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:src="@drawable/ic_num_4" />

                <TextView
                    android:id="@+id/problem4"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diagram_problem_4" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/problemSolver4"
                android:layout_width="match_parent"
                android:layout_height="300dp" >
                <include layout="@layout/editor_view"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/problemLinear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:src="@drawable/ic_num_5" />

                <TextView
                    android:id="@+id/problem5"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drawing_problem_5" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/problemSolver5"
                android:layout_width="match_parent"
                android:layout_height="300dp" >
                <include layout="@layout/editor_view"/>
            </FrameLayout>
        </LinearLayout>
    </com.myscript.iink.samples.assessment.utils.LockableScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
